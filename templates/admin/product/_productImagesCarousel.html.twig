<div id="carouselProductImages_{{ product.id }}{{ modalCarousel is defined ? "_modal" : "" }}"
     class="carousel slide carousel"
     data-mdb-ride="carousel"
     data-mdb-interval="3000">

    <div class="carousel-inner">
        {% for image in product.images %}
            <div class="carousel-item {{ loop.index == 1 ? "active" : "" }}">
                <img src="{{ image.url }}"
                     class="product-image" alt="Wild Landscape"/>
            </div>
        {% endfor %}
    </div>

    <button class="carousel-control-prev" type="button"
            data-mdb-target="#carouselProductImages_{{ product.id }}{{ modalCarousel is defined ? "_modal" : "" }}"
            data-mdb-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button"
            data-mdb-target="#carouselProductImages_{{ product.id }}{{ modalCarousel is defined ? "_modal" : "" }}"
            data-mdb-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>