{% extends 'base_admin.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
    <div class="container-fluid page">
        <div class="card">
            <div class="card-header d-row justify-content-between align-items-center">
                <div class="col-12 col-md-6 col-xxl-9 text-center text-md-start mb-3 mb-md-0">
                    <h1>Listado de Contactos</h1>
                </div>
                <div class="col-12 col-md-6 col-xxl-3">
                    <div class="d-row justify-content-end">
                        <div class="col-6 text-center text-md-end">
                            <a href="{{ path('admin_contact_excel') }}" class="btn btn-excel">
                                <i class="fas fa-file-excel"></i> Excel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tabla-contacts" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Usuario</th>
                            <th>Mensaje</th>
                            <th>Tipo Consulta</th>
                            <th>Fecha Creación</th>
                            <th>Fecha Actualización</th>
                            <th>Status</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for contact in contacts %}
                            <tr>
                                <td>{{ contact.id }}</td>
                                <td><a href="{{ path('admin_user_show', {'id': contact.user.id}) }}" class="btn show"
                                       title="Ver"
                                       data-action="show-entity">{{ contact.user.fullname }}</a>
                                </td>
                                <td>{{ contact.message }}</td>
                                <td>{{ contact.questionType }}</td>
                                <td>{{ contact.createdAt ? contact.createdAt|date('d/m/Y H:i') : '' }}</td>
                                <td>{{ contact.updatedAt ? contact.updatedAt|date('d/m/Y H:i') : '' }}</td>
                                <td>
                                    {% if contact.isActive %}
                                        <a href="{{ path('admin_contact_set_status', {'id': contact.id}) }}"
                                           class="entity-active">
                                            <i class="fa-solid fa-circle-check"></i> Activo
                                        </a>
                                    {% else %}
                                        <a href="{{ path('admin_contact_set_status', {'id': contact.id}) }}"
                                           class="entity-inactive">
                                            <i class="fa-solid fa-circle-xmark"></i> Inactivo
                                        </a>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a href="{{ path('admin_contact_show', {'id': contact.id}) }}" class="btn show"
                                           title="Ver" data-action="show-entity">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        {#<a href="{{ path('admin_contact_edit', {'id': contact.id}) }}" class="btn edit"
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        {{ include('admin/contact/_delete.html.twig', {'contact': contact, 'show_label': false}) }} #}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div id="modalContainer"></div>
{% endblock %}