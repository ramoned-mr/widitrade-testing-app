<div class="modal fade" id="newContactModal" tabindex="-1" aria-labelledby="newContactModalLabel" aria-hidden="true"
     data-backdrop="static" data-mdb-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable new-entity-dialog">
        <div class="modal-content new-entity-content">
            {{ form_start(form, {'attr': {'class': 'needs-validation new-contact-form','action': path('admin_contact_new')}}) }}
            <div class="modal-header new-entity-header">
                <h5 class="modal-title" id="newContactModalLabel">Crear nuevo Contact</h5>
                <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body new-entity-body">
                {% if error_new is not null %}
                    <div class="alert alert-danger">
                        {{ error_new }}
                    </div>
                {% endif %}
                <div class="d-row">
                    {{ form_errors(form) }}

                    <div class="col-md-6 mb-4 px-1">
                        <div class="form-outline">
                            {{ form_widget(form.user, {
                                'attr': {
                                    'class': 'form-control',
                                    'id': 'contact_user'
                                }
                            }) }}
                            {{ form_label(form.user, null, {
                                'label_attr': {
                                    'class': 'form-label',
                                    'for': 'contact_user'
                                }
                            }) }}
                            <div class="form-notch">
                                <div class="form-notch-leading"></div>
                                <div class="form-notch-middle" style="width: 70px;"></div>
                                <div class="form-notch-trailing"></div>
                            </div>
                        </div>
                        <div class="invalid-feedback">
                            {{ form_errors(form.user) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-4 px-1">
                        <div class="form-outline">
                            {{ form_widget(form.message, {
                                'attr': {
                                    'class': 'form-control',
                                    'id': 'contact_message'
                                }
                            }) }}
                            {{ form_label(form.message, null, {
                                'label_attr': {
                                    'class': 'form-label',
                                    'for': 'contact_message'
                                }
                            }) }}
                            <div class="form-notch">
                                <div class="form-notch-leading"></div>
                                <div class="form-notch-middle" style="width: 70px;"></div>
                                <div class="form-notch-trailing"></div>
                            </div>
                        </div>
                        <div class="invalid-feedback">
                            {{ form_errors(form.message) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-4 px-1">
                        <div class="form-outline">
                            {{ form_widget(form.questionType, {
                                'attr': {
                                    'class': 'form-control',
                                    'id': 'contact_questionType'
                                }
                            }) }}
                            {{ form_label(form.questionType, null, {
                                'label_attr': {
                                    'class': 'form-label',
                                    'for': 'contact_questionType'
                                }
                            }) }}
                            <div class="form-notch">
                                <div class="form-notch-leading"></div>
                                <div class="form-notch-middle" style="width: 70px;"></div>
                                <div class="form-notch-trailing"></div>
                            </div>
                        </div>
                        <div class="invalid-feedback">
                            {{ form_errors(form.questionType) }}
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer d-flex justify-content-between">
                <button type="button" class="btn btn-close-modal" data-mdb-dismiss="modal">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <button type="submit" class="btn btn-save" form="{{ form.vars.id }}">
                    <i class="fas fa-save"></i> Guardar
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
<div data-mdb-ripple-init data-mdb-modal-init data-mdb-target="#newContactModal" class="modalDispatcher"></div>