{% extends 'base_admin.html.twig' %}

{% block title %}Usuarios{% endblock %}

{% block body %}
    <div class="container-fluid page">
        <div class="card">
            <div class="card-header d-row justify-content-between align-items-center">
                <div class="col-12 col-md-6 col-xxl-9 text-center text-md-start mb-3 mb-md-0">
                    <h1>Listado de Usuarios</h1>
                </div>
                <div class="col-12 col-md-6 col-xxl-3">
                    <div class="d-row">
                        <div class="col-6 text-center text-md-end">
                            <a href="{{ path('admin_user_new') }}" class="btn btn-add">
                                <i class="fas fa-plus"></i> Crear Usuario
                            </a>
                        </div>
                        <div class="col-6 text-center text-md-end">
                            <a href="{{ path('admin_user_excel') }}" class="btn btn-excel">
                                <i class="fas fa-file-excel"></i> Excel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tabla-users" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Apellidos</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Fecha Creación</th>
                            <th>Fecha Actualización</th>
                            <th>Status</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{ user.lastname }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.roles|json_encode }}</td>
                                <td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : '' }}</td>
                                <td>{{ user.updatedAt ? user.updatedAt|date('d/m/Y H:i') : '' }}</td>
                                <td>
                                    {% if user.isActive %}
                                        <a href="{{ path('admin_user_set_status', {'id': user.id}) }}"
                                           class="entity-active">
                                            <i class="fa-solid fa-circle-check"></i> Activo
                                        </a>
                                    {% else %}
                                        <a href="{{ path('admin_user_set_status', {'id': user.id}) }}"
                                           class="entity-inactive">
                                            <i class="fa-solid fa-circle-xmark"></i> Inactivo
                                        </a>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn show"
                                           title="Ver" data-action="show-entity">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn edit"
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        {{ include('admin/user/_delete.html.twig', {'user': user, 'show_label': false}) }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div id="modalContainer"></div>
{% endblock %}