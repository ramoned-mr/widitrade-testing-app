<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solicitud de Contacto</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            width: 100%;
            background-color: #ffffff;
            -webkit-text-size-adjust: 100%;
            -ms-text-size-adjust: 100%;
        }

        table {
            background-color: #ffffff;
            width: 100%;
            max-width: 700px;
            border-collapse: collapse;
        }

        img {
            border: 0;
            height: auto;
            line-height: 100%;
            outline: none;
            text-decoration: none;
            max-width: 100%;
        }

        .container {
            margin: 0 auto;
            max-width: 700px;
        }

        .content-inner {
            padding: 20px;
            text-align: justify;
            font-family: "Arial", sans-serif;
            font-size: 16px;
        }

        h1 {
            text-align: center;
        }

        @media only screen and (max-width: 600px) {
            .container {
                width: 100% !important;
            }

            .content-inner {
                padding: 10px !important;
            }

            .button img {
                width: 100% !important;
            }
        }
    </style>
</head>
<body>
<center>
    <table class="container" cellpadding="0" cellspacing="0">
        <tr>
            <td>
                <img src="https://iili.io/Fp6ER8Q.png" style="width: 100%; max-width: 700px;">
            </td>
        </tr>
        <tr>
            <td>
                <table width="100%">
                    <tr>
                        <td class="content-inner">
                            <p style="font-size: 24px; color: #98c46c;text-align:center;">
                                <strong>Solicitud de Contacto</strong>
                            </p>
                            <p><strong style="color:#98c46c;">Tipo de consulta: </strong> {{ contact.questionType }}</p>
                            <p style="font-weight: bold;color:#98c46c;"><strong>Datos del usuario:</strong></p>
                            <ul>
                                <li><strong style="color:#98c46c;">Nombre: </strong>
                                    {{ contact.user.fullname }}
                                </li>
                                <li><strong style="color:#98c46c;">Email: </strong>
                                    {{ contact.user.email }}
                                </li>
                            </ul>
                            <p style="font-weight: bold;color:#98c46c;"><strong>Mensaje del usuario:</strong></p>
                            <p style="font-style: italic;color:#3A3E41;"><i>{{ contact.message }}</i></p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                <img src="https://iili.io/Fp6EuFj.png" style="width: 100%; max-width: 700px;">
            </td>
        </tr>
    </table>
</center>
</body>
</html>